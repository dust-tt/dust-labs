{
  "name": "dust-office-addins",
  "version": "0.1.0",
  "description": "Dust Office Add-ins - Use AI Agents in Excel and PowerPoint",
  "scripts": {
    "start": "http-server -p 3000 --ssl --cert ./certs/localhost.crt --key ./certs/localhost.key",
    "dev": "npm run start",
    "validate:excel": "office-addin-manifest validate excel/manifest.xml",
    "validate:powerpoint": "office-addin-manifest validate powerpoint/manifest.xml",
    "validate:all": "npm run validate:excel && npm run validate:powerpoint",
    "generate-cert": "office-addin-dev-certs install && npm run copy-certs",
    "copy-certs": "mkdir -p certs && cp ~/.office-addin-dev-certs/localhost.crt ./certs/ && cp ~/.office-addin-dev-certs/localhost.key ./certs/"
  },
  "dependencies": {},
  "devDependencies": {
    "http-server": "^14.1.1",
    "office-addin-dev-certs": "^1.11.3",
    "office-addin-manifest": "^1.12.3"
  },
  "author": "Dust",
  "license": "MIT"
}